{
  "name": "himalaya-mcp",
  "version": "1.1.2",
  "description": "MCP server wrapping himalaya CLI for privacy-first email access in Claude",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "himalaya-mcp": "dist/cli/setup.js"
  },
  "scripts": {
    "build": "tsc",
    "build:bundle": "esbuild src/index.ts --bundle --platform=node --target=node22 --outfile=dist/index.js --format=esm --minify",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:e2e": "npm run build && node tests/e2e.mjs",
    "pack": "npx @anthropic-ai/mcpb pack"
  },
  "keywords": [
    "mcp",
    "email",
    "himalaya",
    "claude",
    "claude-code-plugin"
  ],
  "author": "Data-Wise",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "esbuild": "^0.27.3",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
